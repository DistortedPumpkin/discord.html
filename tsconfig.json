{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "outDir": "lib",
        "strict": false,
        "strictFunctionTypes": false,
        "skipLibCheck": true,
        "downlevelIteration": false,
        "sourceMap": false,
        "inlineSourceMap": false,
        "inlineSources": false,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./src/types", "node_modules/@types"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules", 
        "**/*.spec.ts",
        "**/examples/**/*"
    ]
}